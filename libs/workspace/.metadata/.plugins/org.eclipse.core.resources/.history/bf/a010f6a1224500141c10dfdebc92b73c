	public EventList(){
		eventList = new ArrayList<Event>();
	}
	
	public void addEvent(Event event){
		eventList.add(event);
	}
	
	public void removeEvent(){
		Iterator<Event> i=this.eventList.iterator();
		for (Event currentEvent : this.eventList){
			if(currentEvent.getStatus()){
				this.eventList.remove(currentEvent);
			}
		}
	}
	
